@model MyModel

<a href="/">Home</a>

<h2>Edit @Model.dishName</h2>

<form asp-action="upDish" asp-controller="Home" method="post">
    <input type="hidden" asp-for="MyModelId">
    <span asp-validation-for="chefName"></span>
    <label asp-for="chefName"></label>
    <input asp-for="chefName"><br>
    <span asp-validation-for="dishName"></span>
    <label asp-for="dishName"></label>
    <input asp-for="dishName"><br>
    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input asp-for="Calories"><br>
    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select><br>
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <input asp-for="Description"><br>

    <input value = "Update" type = "submit">
</form>